{
    "compilerOptions": {
        "outDir": "./dist/",
        "rootDir": "./src/",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "plugins": [
            {
                "name": "typescript-eslint-language-service"
            }
        ]
    },
    "include": ["./src/**/*", "./types/**/*"],
    "typeAcquisition": {
        "enable": true
    }
}
